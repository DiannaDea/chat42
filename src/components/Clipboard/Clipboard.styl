$btn-color = #3d83d6
$btn-font-color = #fff

.btn-wrapper
  align-items: center
  display: flex
  justify-content: center
  height: 100%
  width: 100%

.btn
  background-color: $btn-color
  border: 0
  border-bottom: 2px solid transparent
  border-top: 2px solid transparent
  color: $btn-font-color
  cursor: pointer
  font-size: 1em
  font-weight: 700
  outline: 0
  padding: 1em 2em

.btn:hover
  border-bottom-color darken($btn-color, 20)

.btn:active
  border-bottom-color: transparent
  border-top-color darken($btn-color, 20)
